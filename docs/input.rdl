объекты:
    человек;
    автомобиль;
;

инструменты:
    *т1: (40, 50);

    *л1: прямая, от=(20, 30), до=*т1;

    *л2: прямая, до=(50, 60), от=(50, 50), цвет=rgb(255, 0, 0);

    *з1: зона, состав=...(
        *л1;
        *л2;
        дуга, центр=(3, 3), радиус=1, уголОт=0, уголДо=180
    );

    *cч1: счетчик, старт=0, шаг=1;
;

обработка:
    _действие1: оповестить(сообщение="сообщение 1");
    _действие3: оповестить(сообщение="сообщение_3");

    если (автомобиль.пересекает(элемент=*л1)):
        _действие1;
        оповестить(сообщение="еще одно сообщение");
    ;

    _cобытие1: человек.пересекает(элемент=*л1);
    _cобытие2: человек.пересекает(элемент=*л2);
    _действие2: увеличить(сч=*cч1);

    если _cобытие1 или _cобытие2:
        _действие2;
    ;

    если (автомобиль.пересекает(элемент=*л2)) и _cобытие2:
        _действие3;
    ;

    _событие3: *cч1.равен(число=1000);
    если _событие3:
        оповестить(сообщение="1000 пересечений линии");
        сохранить(сообщение="1000 пересечений линии");
        обнулить(сч=*cч1);
    ;
;
