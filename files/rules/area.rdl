объекты:
    птица;
;

инструменты:
    *угол1: (100, 100);
    *угол2: (200, 100);
    *угол3: (200, 200);
    *угол4: (100, 200);

    *л1: прямая, от=*угол1, до=*угол2;
    *л2: прямая, от=*угол2, до=*угол3;
    *л3: прямая, от=*угол3, до=*угол4;
    *л4: прямая, от=*угол4, до=*угол1;

    *з1: зона, состав=...(*л1, *л2, *л3, *л4), цвет=rgb(0, 0, 255), толщина=2;

    *счетчик_вход: счетчик, старт=0, шаг=1;
    *счетчик_зона: счетчик, старт=0, шаг=1;
    *счетчик_выход: счетчик, старт=0, шаг=1;
;

обработка:
    если (птица.входитВ(*з1, *л1 или *л2 или *л3 или *л4)):
        увеличить(*счетчик_вход);
        высветить(птица, rgb(0, 255, 0));
    ;

    если (птица.находитсяВ(*з1, 10)):
        увеличить(*счетчик_зона);
        высветить(человек, rgb(255, 255, 255));
    ;

    если (птица.покидает(*з1, *л1 или *л2 или *л3 или *л4)):
        увеличить(*счетчик_выход);
        высветить(птица, rgb(255, 0, 0));
    ;
;