объекты:
    человек;
;

инструменты:
    *л1: линия, цвет=rgb(255, 0, 0), толщина=2, состав=...(
        прямая, от=.(320, 100), до=.(420,100);
        дуга, центр=.(320, 180), радиус=80, уголОт=90, уголДо=270
    ); 

    *сч1: счетчик, старт=0, шаг=1;
;

обработка:
    если (человек.пересекает(*л1, (слева или сверху))):
        увеличить(*сч1);
        высветить(человек, rgb(0, 255, 0));
    ;
;