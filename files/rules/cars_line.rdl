объекты:
  автомобиль;
  грузовик;
;

инструменты:
  *л: прямая, от=.(0, 363), до=.(848, 363);
;

обработка:
  если (автомобиль.пересекает(*л, сверху)):
    высветить(автомобиль, rgb(0, 255, 0));
  ;
  
  если (автомобиль.пересекает(*л, снизу)):
    высветить(автомобиль, rgb(0, 255, 255));  
  ;

  если (грузовик.пересекает(*л)):
    высветить(грузовик, rgb(255, 0, 0));
  ;
;