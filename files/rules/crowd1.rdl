объекты:
  человек;
;

инструменты:
  *остановка: зона, цвет=rgb(0, 200, 0), толщина=2, состав=...(
    прямая, от=.(282,464), до=.(182,464);
    прямая, от=.(182,464), до=.(300,253);
    прямая, от=.(300,253), до=.(350,253);
    прямая, от=.(350,253), до=.(282,464)
  );

  *счет: счетчик, старт=0, шаг=1;
;

обработка:
    если (человек.входитВ(*остановка)):
        увеличить(*счет);
    ;

    если (человек.покидает(*остановка)):
        уменьшить(*счет);
    ;

    если (*счет.превышает(10)):
        оповестить("Обнаружена толпа");
    ;
;