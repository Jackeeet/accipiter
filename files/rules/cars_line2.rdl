объекты: автомобиль; грузовик;;

инструменты:
  *начало: .(0, 363);
  *л: прямая, от=*начало, до=.(848, 363), цвет=rgb(255, 122, 122);
;

обработка:
  _пересечениеСверху: автомобиль.пересекает(*л, сверху) 
      или грузовик.пересекает(*л, сверху);
  _пересечениеСнизу: автомобиль.пересекает(*л, снизу) 
      или грузовик.пересекает(*л, снизу);

  если _пересечениеСверху или _пересечениеСнизу:
    оповестить("пересечение заданной линии");  ;
;