объекты:
    человек;
;

инструменты:
  *остановка1: зона, цвет=rgb(0, 200, 0), толщина=2, состав=...(
    прямая, от=.(282,464), до=.(182,464);
    прямая, от=.(182,464), до=.(300,253);
    прямая, от=.(300,253), до=.(350,253);
    прямая, от=.(350,253), до=.(282,464)
  );

  *остановка2: зона, цвет=rgb(0, 200, 0), толщина=2, состав=...(
    прямая, от=.(748,464), до=.(648,464);
    прямая, от=.(648,464), до=.(500,253);
    прямая, от=.(500,253), до=.(540,253);
    прямая, от=.(540,253), до=.(748,464)
  );
;

обработка:
    если (человек.находитсяВ(*остановка1, 20) или
          человек.находитсяВ(*остановка2, 20)):
        высветить(человек, rgb(255, 255, 255));
    ;
;